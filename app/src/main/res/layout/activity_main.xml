<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp">

        <!-- Текст -->

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Disconnected"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Connect to HC-06" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text for running line"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/edtText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите текст"
            android:maxLines="1" />

        <Button
            android:id="@+id/btnSendText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Text"
            android:layout_marginTop="8dp" />
        <Button
            android:id="@+id/btnClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear" />

        <!-- Яркость -->
        <TextView
            android:id="@+id/txtBrightValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brightness: 128"
            android:layout_marginTop="16dp" />

        <SeekBar
            android:id="@+id/seekBrightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="128" />

        <Button
            android:id="@+id/btnSendBrightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Brightness" />

        <!-- Скорость -->
        <TextView
            android:id="@+id/txtSpeedValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speed: 50"
            android:layout_marginTop="16dp" />

        <SeekBar
            android:id="@+id/seekSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50" />

        <Button
            android:id="@+id/btnSendSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Speed" />

        <!-- Режимы анимации -->
        <TextView
            android:id="@+id/txtModeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mode"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btnModeStatic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Static" />

            <Button
                android:id="@+id/btnModeRainbow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rainbow" />

            <Button
                android:id="@+id/btnModeMulti"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Multi" />
        </LinearLayout>
        <!-- RGB палитра -->
        <TextView
            android:id="@+id/txtRgbLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RGB color"
            android:layout_marginTop="16dp" />

        <!-- R -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="R" />

            <SeekBar
                android:id="@+id/seekR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="255" />

            <TextView
                android:id="@+id/txtRVal"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="255"
                android:gravity="end" />
        </LinearLayout>

        <!-- G -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="G" />

            <SeekBar
                android:id="@+id/seekG"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="255" />

            <TextView
                android:id="@+id/txtGVal"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="255"
                android:gravity="end" />
        </LinearLayout>

        <!-- B -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="B" />

            <SeekBar
                android:id="@+id/seekB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="255" />

            <TextView
                android:id="@+id/txtBVal"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="255"
                android:gravity="end" />
        </LinearLayout>

        <!-- предпросмотр и кнопка -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <View
                android:id="@+id/colorPreview"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF" />

            <Button
                android:id="@+id/btnSendRgb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply RGB"
                android:layout_marginStart="8dp" />
        </LinearLayout>



    </LinearLayout>
</ScrollView>
